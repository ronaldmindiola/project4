---
import { Image } from "astro:assets";
import yaLogoDark from '../../assets/YaLogoDark.png'
import {headerData} from '@/site.config'
const { title, subtitle, primaryBtn, primaryBtnURL, src, alt } = headerData
import heroImage from "../../src/assets/YaLogoDark.png"

import Button from "../atoms/Button.astro";
---
<section
  class="mx-auto grid max-w-[85rem] gap-4 px-4 py-7 sm:px-6 md:grid-cols-2 md:items-center md:gap-8 lg:px-8 2xl:max-w-full"
>
  <!-- Title and description -->
  <div>
    <!-- Each h1 and p tag renders a portion of the title and subTitle defined above -->
    <div class="flex items-center"> <!-- Añadimos items-center para la alineación vertical -->
      <div class="flex flex-col">
        <h1 class="text-3xl sm:text-4xl lg:text-6xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200">
          {title}
        </h1>
      </div>
      <div class="ml-2 flex items-center">
        <Image
          src={yaLogoDark}
          class="inline"
          alt="Logo Soluciones Eléctricas."
          height="128"
        />
      </div>
    </div>
    
    {
      subtitle && (
        <p class="mt-3 text-pretty text-lg leading-relaxed text-neutral-700 dark:text-neutral-400 lg:w-4/5">
          {subtitle}
        </p>
      )
    }
    <!-- Action Button Section: This section includes two CTAs with their own styles and URL -->
    <div class="mt-7 grid w-full gap-3 sm:inline-flex">
      <Button text={primaryBtn} href={primaryBtnURL} fullWidth/>
    <Button text={primaryBtn} variant="secondary" fullWidth/>
    </div>

    <!-- Review Section: This section presents avatars, review ratings and the number of reviews -->
    
  </div>
  
  <!-- Hero Image Section -->
  <div class="flex w-full">
    <div class="top-12 overflow-hidden">
      {
        src && alt && (
          <div>
            <Image
              src={yaLogoDark}
              alt={alt}
              class="h-full w-full scale- object-cover object-center rounded-sm hover:scale-125"
              draggable={"false"}
              loading={"eager"}
              format={"avif"}
            />
          </div>
        )
      }
      
    </div>
  </div>
</section>